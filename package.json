{
  "name": "@yotie/micron",
  "version": "2.0.0-rc",
  "description": "A serverless micro-framework for Vercel",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "prebuild": "rm -rf ./dist",
    "build": "microbundle -o dist/index.js -f cjs,es,modern --target node --compress",
    "dev": "microbundle --target node watch",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yotie/micron.git"
  },
  "author": "Ashley Narcisse <@darkfadr>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yotie/micron/issues"
  },
  "homepage": "https://github.com/yotie/micron#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "dependencies": {
    "@vercel/node": "^1.8.1",
    "debug": "^4.1.1",
    "matcher": "^3.0.0",
    "request-promise": "^4.2.6"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.9.0",
    "@types/debug": "^4.1.5",
    "@types/jest": "^25.2.1",
    "@types/node-fetch": "^2.5.7",
    "@types/test-listen": "^1.1.0",
    "jest": "^26.4.2",
    "microbundle": "next",
    "node-fetch": "^2.6.0",
    "test-listen": "^1.1.0"
  }
}
